{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "arrow-parens": false,
        "interface-name": false,
        "no-console": false,
        "prefer-function-over-method": false,
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ], 
        "space-before-function-paren": true,
        "trailing-comma": false,
        "variable-name": {
            "options": [
                "allow-leading-underscore"
            ]
        }
    },
    "rulesDirectory": []
}